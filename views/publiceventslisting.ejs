<div class='container'>
  <h1>All events</h1>
  <table class='table'>
    <thead>
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Location</th>
        <th>Status</th>
        <th>Join</th>
      </tr>
    </thead>
    <tbody>
      <% event %>
      <tr>
      <% event.forEach(function (item, index) { %>
        <td><%= item.description %></td>
        <td><%= item.date %></td>
        <td><%= item.location %></td>
        <td><%= item.status %></td>
        <% if (!currentUser || !currentUser._id.equals(item.user)) {%>
        <td><a href="/public/events/event/<%=item.id%>/interestedinevent"><button type="button" class="btn btn-default">Interested?</button></a></td>
      <% }
        else if (currentUser._id.equals(item.user)) {%>
          <td><a href="/public/events/event/<%=item.id%>/yourevent"><button type="button" class="btn btn-default">Your Event</button></a></td>
        <% } %>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
